# ------------------------------ compiler options ------------------------------
NAME		=	libgnl.a
CC			=	clang
CFLAGS		=	-Wall -Wextra -Werror
COPTIONS	=	-O3 -ffast-math
# ------------------------------- linker options -------------------------------
LIBRARY		=
OBJS_DIR	=	../obj
INCLUDE_DIR	=	../gnl
SCRS_DIR	=	../gnl
LIBFT		=
# ------------------------------- project sorces -------------------------------
SRCS		=	\
				get_next_line	\
				get_next_line_u
# ------------------------------------------------------------------------------
HDRS		=	\
				get_next_line

# ======================= UNCHANGEABLE PART OF MAKEFILE ========================
# ------------------------------------------------------------------------------
RM			=	rm -f
OBJS		=	$(addprefix ${OBJS_DIR}/,${SRCS:=.o})
DEPS		=	$(addprefix ${INCLUDE_DIR}/,${HDRS:=.h})
INCLUDE		=	-I ${INCLUDE_DIR}
LIB_INIT	=	ar rc

# ------------------------------------------------------------------------------
all:
	@$(MAKE)	$(NAME) -j

# ------------------------------------------------------------------------------
${OBJS_DIR}/%.o: ${SCRS_DIR}/%.c ${DEPS} Makefile
	${CC}		${CFLAGS} ${COPTIONS} -c -o $@ $< ${INCLUDE}

# ------------------------------------------------------------------------------
$(NAME):		${OBJS} ${DEPS}
	$(LIB_INIT)	${NAME} ${OBJS}

# ------------------------------------------------------------------------------
clean:
	${RM}		${OBJS}

# ------------------------------------------------------------------------------
fclean:			clean
	${RM}		${NAME}

# ------------------------------------------------------------------------------
re:				fclean all

# ------------------------------------------------------------------------------
.PHONY:			all clean fclean re
